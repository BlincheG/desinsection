            section.why-we-section
                .why-we-wrap.container
                    div(style="text-align: center")
                        .why-we-section-title.section-title Почему мы?
                    .why-we-section-description
                        .why-we-items
                            .why-we-item
                                .we-item-image
                                    img(src='images/whymelogo1.png', alt='')
                                .why-item-description
                                    .we-item-title Оперативность
                                    .we-item-text Выезд мастера в день обращения

                            .why-we-item
                                .we-item-image
                                    img(src='images/whymelogo2.png', alt='')
                                .why-item-description
                                    .we-item-title Безопасность
                                    .we-item-text Безопасные химические составы

                            .why-we-item
