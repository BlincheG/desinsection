            section.contact-us-section
                .contact-us-background
                    img(src='images/form_background.png', alt='')
                .contact-us-wrap.container
                    .contact-us-form
                        .form-overlay
                        .bug-image
                            img(src='images/bug.png')
                        .contact-us-form-title Оставьте заявку на бесплатный вызов специалиста!
                        form#contact_us(action='/callback.json')
                            input(type='text', name='name', placeholder='Имя' required='required')
                            input(type='text', name='phone', placeholder='Телефон' required='required' data-mask="+7 (000) 000 0000")
                            button(type="submit") Заказать

        footer
            .footer-wrap.container#contact
                .footer-leftside
                    a.footer-logo(href="#")
                        img(src='images/logo.png', alt='', href="#")
                .footer-rightside
                    .footer-title Контакты
                    .footer-description
                        p
                            label Адрес
                            span «БЦ Нурлы-Тау» проспект Аль-Фараби, 19 блок 3Б, 8 этаж
                        p
                            label Телефон
                            span +7 (777) 777 77 77
                        p
                            label Email
                            span info@pesthunter.kz

