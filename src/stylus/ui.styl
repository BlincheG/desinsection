* {
    margin: 0;
    padding: 0;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

a{
    text-decoration: none;
}


button{
    font-family: 'Roboto', sans-serif;
}

.submit{
    text-transform: uppercase;
    padding: 30px 62px;
    border-radius 5px
    background: #c13a3a;
    color: white;

    font-size 1rem
    font-weight 500
    box-shadow 0px 0px 100px 1px rgba(0,0,0,0.1)
    display inline-block
}

.download{
    text-transform: uppercase;
    padding: 30px 28px;
    background: #fcfcfc;
    margin-right: 53px;
    color: #515151;
    display: inline-block;
    border-radius 5px
}

strong
    font-weight bold