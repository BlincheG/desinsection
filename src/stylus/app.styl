.price-section

    .price-section-content
        overflow-x auto

    .price-table
        width: 100%;
        border-collapse: collapse;
        border-top: hidden;
        border-right: hidden;
        border-left: hidden;
        border-bottom: hidden;
        background-color #FFFFFF
        box-shadow 0 0 50px 0 rgba(0,0,0,0.5)

        td
        th
            border: 1px solid #d3d3d3;
            padding: 35px 20px

        td
            color: #626262;
            font-size 1rem

        th
            color: #515151;
            font-size: 26px;
            font-weight: 400;

.contact-us-section
    padding 150px 0
    position relative

    .contact-us-background
        width 100%
        height 100%
        text-align right
        position absolute
        bottom 0
        z-index -1
        opacity 0.3

        img
            max-width 50%

    .contact-us-form
        width 380px
        padding 50px
        background-color #40587c
        text-align center
        position relative

        @media screen and (max-width: 768px)
            width 100%
            margin 0 auto

    .contact-us-form-title
        color white
        font-family Roboto
        font-size 1.8rem
        font-weight bold
        line-height 30px
        text-align center
        margin-bottom 30px

    .form-overlay
        width 100%
        height 100%
        display none
        position absolute
        top 0
        left 0
        background-color rgba(255,255,255,0.5)

    input[type="text"]
        width 100%
        padding 20px 25px
        border-radius 4px
        margin-top 20px

        &:first-of-type
            margin-top 0px

    button
        width 100%
        padding: 20px 25px;
        background-color: #c13a3a;
        color: white;
        border: none;
        border-radius 4px
        margin-top 25px
        font-size: 20px;
        text-transform: uppercase;

    .bug-image
        position absolute
        top -100px

        img
            max-width 80%

footer
    padding 60px 0px
    background-color #c5dec7

    .footer-wrap
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        align-items center

    .footer-leftside
        flex-basis 30%
        text-align center

        @media screen and (max-width 990px)
            flex-basis 100%
            order 2
            margin-top 30px

    .footer-rightside
        flex-basis 60%

        @media screen and (max-width 990px)
            flex-basis 100%
            order 1

    .footer-logo
        img
            width 180px

    .footer-title
        font-size 1.8rem
        text-align left

    .footer-description
        font-size 1rem
        text-align left
        margin-top 30px

        p
            margin-top 10px

            &:first-of-type
                margin-top 0px

        label
            width 80px
            font-weight 500
            text-align left
            display inline-block

        span
            font-weight 300
            line-height 22px

