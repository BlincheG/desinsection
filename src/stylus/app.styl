table {
    margin: 0 auto;
    width: 100%;
    border-collapse: collapse;
    border-top: hidden;
    border-right: hidden;
    border-left: hidden;
    border-bottom: hidden;
    background: #fff;
    box-shadow: 0 0 50px #adadad;
}

table td, table th{
    border: 1px solid #d3d3d3;
    padding: 45px 0px 45px 0px;
}

