@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Roboto:100,400,500,700&subset=cyrillic')
global-reset()

@import 'ui.styl'

@import "~slick-carousel/slick/slick.css"
@import "~slick-carousel/slick/slick-theme.css"


body
    background-color #f2f1f1
    font-family 'Roboto', sans-serif
    font-size 14px
    width 100%
    height 100%

.container
    width 990px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px

    &.limiter-768x
        width 768px
    &.limiter-480x
        width 480px
    &.limiter-330x
        width 330px

    @media screen and (max-width: 990px)
        width 768px !important
    @media screen and (max-width: 768px)
        width 480px !important
    @media screen and (max-width: 480px)
        width 330px !important

section
    width 100%
    display block
    clearfix()


.fixed-right-man
    text-align right
    position absolute
    z-index -1
    top 0
    right 0

    img
        max-width 80%
        display inline

header
    width: 100%;
    display: flex;
    flex-direction row
    align-items center
    justify-content flex-start


    .header_logo
        margin-left 0
        position relative

        &:before
            content "\a"
            display block
            background-color #c5dec7
            width 550px
            height 275px
            border-radius 550px
            transform rotateZ(-12deg)
            position absolute
            top -120px
            left -150px
            z-index 0

        a
            position relative
            z-index 1

    nav
        margin-left 150px

        a
            color: #2a2a2a;
            text-align: center;
            padding: 0 30px;
            font-size: 18px;

.main_welcome
    padding 200px 0px

    .main_welcome-wrap
        margin-top 70px

    p
        max-width 550px
        color: #515151;
        font-size: 1.6rem;
        line-height 30px
        margin-top: 40px;
        font-weight: 400;

    h1
        color: #515151;
        font-size: 2.7rem
        font-weight bold
        font-family: 'Roboto', sans-serif;

    .main_welcome_button-wrap
        margin-top: 61px;

    a.button
        font-size 1rem
        font-weight 500
        box-shadow 0px 0px 100px 1px rgba(0,0,0,0.1)
        display inline-block



.main_about_me
    padding 100px 0px
    position: relative;
    color: #515151;

    .about_me-background
        position absolute
        top -100px
        left 0

        img
            max-width 90%


    .about_me-wrap
        display flex
        flex-direction row
        justify-content center
        align-items center

        & > *
            width 50%
            flex-basis 50%

    .about_me-description
        width 70%


    h1
        font-size: 2.7rem
        font-weight bold
        font-family: 'Roboto', sans-serif;
        margin-bottom: 50px;
        display: inline-block;

        &:after
            content: ' ';
            border-bottom: 3px solid #ff6333;
            display: block;
            width: 67px;
            padding-bottom: 36px;

    p
        font-size 1.6rem
        line-height 30px
        margin-top 25px

        &:first-of-type
            margin-top 0


.how_we_are_work
    text-align: center;
    padding: 100px 0;

    h1
        display: inline-block;
        font-size: 50px;
        color: #515151;

        &:after
            content: ' ';
            border-bottom: 3px solid #ff6333;
            display: block;
            width: 67px;
            padding-bottom: 36px;
            margin-bottom: 145px;

    h4
        font-family: 'Roboto', sans-serif;
        font-size: 30px;
        font-weight: 100;
        position: absolute;
        top: -35px;
        right: 90px;
    

    .work_cards
        display: flex;
        flex-wrap wrap
        align-items: center;
        justify-content: space-between;
        position: relative;
        margin-top -100px

    .cards
        &:last-of-type
            margin 100px auto
        flex-basis 33%
        margin-top 100px
        position: relative;
    
        img 
            position: relative;
            z-index: 9;

        .photo
            margin: 20px;


    p.about_works{
        font-size: 1.5rem;
        font-weight: 400;
        line-height 25px
    }


